---
interface Props {
  headline: string
  alternativeHeadline?: string
  description: string
  datePublished: string
  wordCount: string
  timeRequired: string
}

const {
  headline,
  alternativeHeadline,
  description,
  datePublished,
  wordCount,
  timeRequired,
}: Props = Astro.props

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline,
  alternativeHeadline,
  description,
  wordCount,
  "datePublished": new Date(datePublished).toISOString().substring(0, 10),
  "timeRequired": `PT${timeRequired}M`,
  "author": {
    "@type": "Person",
    "name": "Jake Holman (@jakesisonline)",
    "url": "https://jakeisonline.com",
  },
}
---

<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
