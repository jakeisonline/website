---
import Link from "@/components/ui/link.astro"
import { cn } from "@/lib/utils"

interface Props {
  class?: string
}

const { class: className }: Props = Astro.props

const globalNavItems = [
  {
    name: "Components",
    href: "/components",
  },
  {
    name: "Posts",
    href: "/blog",
  },
]

const currentPath = Astro.url.pathname
---

<nav
  class={cn("hidden lg:flex items-center gap-4 text-sm lg:gap-6", className)}
>
  {
    globalNavItems.map(({ name, href }) => (
      <Link
        href={href}
        class={
          currentPath.includes(href) ? "text-foreground" : "text-foreground/60"
        }
      >
        {name}
      </Link>
    ))
  }
</nav>
